<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<Pane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.westga.cs.schoolgrades.controllers.GradesController">
   <children>
      <BorderPane>
         <top>
            <MenuBar BorderPane.alignment="CENTER">
               <menus>
                  <Menu mnemonicParsing="false" text="Data">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleAddQuizMenuItemClicked" text="Add quiz" />
                        <MenuItem mnemonicParsing="false" onAction="#handleAddHomeworkMenuItemClicked" text="Add homework" />
                        <MenuItem mnemonicParsing="false" onAction="#handleAddExamMenuItemClicked" text="Add exam" />
                     </items>
                  </Menu>
               </menus>
            </MenuBar>
         </top>
         <center>
            <HBox BorderPane.alignment="CENTER">
               <children>
                  <VBox fillWidth="false" prefHeight="269.0" prefWidth="98.0" spacing="5.0">
                     <children>
                        <Label contentDisplay="BOTTOM" text="Quizzes" />
                        <ListView fx:id="quizzesListView" prefHeight="200.0" prefWidth="100.0" />
                        <Label alignment="CENTER" contentDisplay="BOTTOM" text="Quiz Subtotal" textAlignment="CENTER">
                           <graphic>
                              <TextField fx:id="quizSubtotalTextField" editable="false" prefHeight="25.0" prefWidth="100.0" />
                           </graphic>
                        </Label>
                     </children>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </VBox>
                  <VBox prefWidth="150.0" spacing="5.0">
                     <children>
                        <Label alignment="CENTER" contentDisplay="BOTTOM" text="Homeworks" />
                        <ListView fx:id="homeworksListView" prefHeight="200.0" />
                        <Label alignment="CENTER" contentDisplay="BOTTOM" text="HW Subtotal">
                           <graphic>
                              <TextField fx:id="homeworkSubtotalTextField" editable="false" prefWidth="150.0" />
                           </graphic>
                        </Label>
                     </children>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </VBox>
                  <VBox prefWidth="150.0" spacing="5.0">
                     <children>
                        <Label alignment="CENTER" contentDisplay="BOTTOM" text="Exams" />
                        <ListView fx:id="examsListView" prefHeight="200.0" prefWidth="175.0" />
                        <Label alignment="CENTER" contentDisplay="BOTTOM" text="Exam Subtotal">
                           <graphic>
                              <TextField fx:id="examSubtotalTextField" editable="false" prefWidth="150.0" />
                           </graphic>
                        </Label>
                     </children>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </VBox>
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </HBox>
         </center>
         <bottom>
            <HBox spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <Label contentDisplay="RIGHT" text="Final Grade:">
                     <graphic>
                        <TextField fx:id="finalGradeTextField" editable="false" />
                     </graphic>
                  </Label>
                  <Button mnemonicParsing="false" onMouseClicked="#handleRecalculateButtonClicked" text="Recalculate" />
               </children>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </HBox>
         </bottom>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </BorderPane>
   </children>
</Pane>
